{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Incremental ID of the category"
          },
          "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 128,
            "description": "The name of the category"
          }
        },
        "required": ["id", "name"],
        "additionalProperties": false
      }
    }
  },
  "required": ["categories"]
}
