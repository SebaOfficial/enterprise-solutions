{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "solutions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string",
            "minLength": 16,
            "maxLength": 256,
            "pattern": "^.+\\.$"
          },
          "category": {
            "type": "number"
          },
          "github": {
            "type": "string",
            "pattern": "^([a-zA-Z0-9_-]+)(/([a-zA-Z0-9_-]+)?)?/?$"
          }
        },
        "required": ["name", "url", "description", "github"]
      }
    }
  },
  "required": ["solutions"]
}
